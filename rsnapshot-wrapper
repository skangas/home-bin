#!/bin/bash

exit

BACKUP_DIRECTORY=/mnt/backup
HOST=`hostname`

# mount as needed
if [ ! `mount | grep "on /mnt/backup type" > /dev/null` ]; then
    /home/skangas/bin/mount-backup.sh
fi

echo "mounted successfully"

# do the backup only when mount succeded
if [ `mount | grep "on /mnt/backup type" > /dev/null` ]; then
    exit 1
fi

nice -n19 ionice -c3 /usr/bin/rsnapshot $@

umount /mnt/backup
/sbin/lvchange -a n huey-backup
/sbin/cryptsetup luksClose backup
